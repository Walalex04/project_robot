<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find robot)/urdf/parts/leg_joint/leg_joint.gazebo"/>
  
  <xacro:macro name="leg_joint_v0" params="prefix parent *joint_origin *joint_axis">
	<joint name="${prefix}_leg_joint" type="revolute">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="${prefix}_leg_joint_link"/>
			<limit effort="0.001" velocity="10" lower="-3" upper = "3"/>
          <dynamics damping="0.001" friction="0.1"/>
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="${prefix}_leg_joint_link">
	  <visual>
		<geometry>
		  <mesh filename="/home/alex/Documentos/universidad/robot/colcon_ws/src/robot/meshes/leg_joint.dae"/>
		</geometry>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="/home/alex/Documentos/universidad/robot/colcon_ws/src/robot/meshes/leg_joint.stl"/>
		</geometry>
	  </collision>
	  <inertial>
		<origin xyz="0 0 -0.038"/>
		<mass value="1.16"/>
		<inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.001" />
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>
